@model List<OnlineShoppingStore.DAL.Category>

@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="#">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">Category</li>
</ol>
<!-- DataTables Example -->
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Category Details
        <a href="../Admin/CategoryAdd" class="btn btn-info pull-right fa fa-plus"> Add New</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Category</th>                  
                        <th>Action</th> 
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Category</th>                        
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@(Model.IndexOf(item)+1)</td>
                            <td>@item.CategoryName</td>
                            <td>
                                @Html.ActionLink("Edit", "CategoryEdit", new { categoryId = item.CategoryId }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Delete", "DeleteCategory", new { categoryId = item.CategoryId }, new { @class = "btn btn-danger" })
                            </td>


                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
