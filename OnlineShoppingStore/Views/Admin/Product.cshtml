@model IEnumerable<OnlineShoppingStore.Models.ViewModels.ProductViewModel>


@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (Model != null)
{
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Product</li>

        </ol>
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-compact-disc"></i>
                Product
                <a href="../Admin/ProductAdd" class="btn btn-info pull-right fa fa-plus"> Add New</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Category</th>
                                <th>Artist</th>
                                <th>Album</th>
                                <th>Product Image</th>
                                <th>Description</th>
                                <th>Genre</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>CreatedDate</th>
                                <th>ModifiedDate</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Sr. No.</th>
                                <th>Category</th>
                                <th>Artist</th>
                                <th>Album</th>
                                <th>Product Image</th>
                                <th>Genre</th>
                                <th>Description</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>CreatedDate</th>
                                <th>ModifiedDate</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>

                            @foreach (var item in Model)
                            {

                                <tr>
                                    <td>@item.ProductId</td>
                                    <td>@item.CategoryName</td>
                                    <td>@item.ArtistName</td>
                                    <td>@item.AlbumName</td>
                                    <td>
                                        <img class="img-responsive" title="Click to View Product detail"
                                             style="cursor:pointer; height:120px; "
                                             src="~/ProductImg/@item.ProductImage" />
                                    </td>
                                    <td>@item.Genre</td>
                                    <td>@item.Description</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Price</td>
                                    <td>@item.CreatedDate</td>
                                    <td>@item.ModifiedDate</td>
                                    <td>
                                        @Html.ActionLink("Edit", "ProductEdit", new { productId = item.ProductId }, new { @class = "btn btn-primary" })
                                        @Html.ActionLink("Delete", "DeleteProduct", new { productId = item.ProductId }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>


                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>
}
else
{
    <h2>Please Add a Product</h2>
}
