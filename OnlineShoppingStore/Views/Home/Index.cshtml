@model IEnumerable<OnlineShoppingStore.Models.ViewModels.ProductViewModel>

@{
    ViewBag.Title = "Home Page";
}
<br />
<br />
<br />
<div class="container">
    <div id="themeSlider" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#themeSlider" data-slide-to="0" class="active"></li>
            <li data-target="#themeSlider" data-slide-to="1"></li>
            <li data-target="#themeSlider" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item">
                <div class="imgOverlay"></div>
                <img style="height:400px; width:100%" src="../Images/florencia-viadana-f74kZNWhfps-unsplash.jpg" alt="Second slide">
                <div class="carousel-caption">
                    <h3>By something new</h3>
                    <p>See whats is new to our store</p>
                </div>
            </div>
            <div class="item">
                <div class="imgOverlay"></div>
                <img style="height:400px; width:100%" src="../Images/mitchel-lensink-KmGMMxVv0_Q-unsplash.jpg" alt="Third slide">
                <div class="carousel-caption">
                    <h3>Trade with others</h3>
                    <p>Trade with other users</p>
                </div>
            </div>
            <div class="item active">
                <div class="imgOverlay"></div>
                <img style="height:400px; width:100%" src="../Images/eric-krull-fi3_lDi3qPE-unsplash.jpg" alt="First slide">
                <div class="carousel-caption">
                    <h3>What's new in the word of vinyl</h3>
                    <p>See the lates new's </p>
                </div>
            </div>
        </div>

        <a class="left carousel-control" href="#themeSlider" data-slide="prev">
            <span class="fa fa-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#themeSlider" data-slide="next">
            <span class="fa fa-chevron-right"></span>
        </a>

    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="page-header">

                <h2>Ooo New staff!!</h2>

            </div>
        </div>
    </div>




    <div id="divProducts">
        @Html.Partial("_Products", ViewData.Model)

    </div>
</div>