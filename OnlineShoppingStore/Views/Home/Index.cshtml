<div class="olContent f1"><h2 style="color:black">Search Product/Category</h2></div>
<form method="post">
    <div class="olSearch fr">
        <input type="text" name="search" placeholder="Enter Keyword" class="inputComn form-control" />
        <div class="searchIcon">
            <button type="submit" class="searchBtn">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>

</form>

<div class="row">
    <div class="col-md-12">
        <div class="page-header">

            <h2>Most Popular Products</h2>

        </div>
    </div>
</div>


<div class="row product-container">

    @foreach (var item in Model.ListOfProducts)
    {

        <div class="col-md-3 col-sm-3 col-xs-6 tile" style="margin-bottom:8px;">
            <div class="thumbnail product-item" style="height:310px">
                <img class="img-responsive" title="Click to View Product detail"
                     style="cursor:pointer; height:160px; width:100%"
                     src="~/ProductImg/@item.ProductImage" />

                <div class="caption">
                    <h5>@item.ProductName </h5>
                    <p>@item.Price €</p>
                    <div>
                        @if (item.Quantity > 0)
                        {

                            using (Html.BeginForm("Buy", "ShoppingCartItem", new { id = item.ProductId }, FormMethod.Post))
                            {
                                <button type="submit" class="pull-right"><i class="fa fa-shopping-cart"></i></button>

                            }

                            <p>Available</p>
                        }
                        else
                        {
                            <p>Not Available</p>
                        }
                    </div>
                    <div class="product-item-badge">
                        @if (item.IsFeatured == true)
                        {
                            <p>New</p>
                        }
                        else
                        {
                            <p>Old</p>
                        }
                    </div>
                </div>
            </div>
        </div>

    }


</div>




